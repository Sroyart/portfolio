---
import ThemeIcon from "../components/ThemeIcon.astro";
import MainLayout from "./MainLayout.astro";
---

<MainLayout>
  <header class="header">
    <div class="icon">
      <ThemeIcon />
    </div>
  </header>
  <article>
    <slot />
  </article>
</MainLayout>

<style>
  .header {
    position: absolute;
    width: 100%;
  }
  .icon {
    display: flex;
    align-items: center;
    padding: 0 1rem;
    height: 3.75rem;
    float: right;
  }
</style>
