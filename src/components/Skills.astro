---
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<div class="skills">
  <h2>{t("about.title.skills")}</h2>
  <ul class="skills-list">
    <li>HTML</li>
    <li>CSS</li>
    <li>JavaScript, TypeScript</li>
    <li>React</li>
    <li>Next.js</li>
    <li>Node.js</li>
    <li>Express</li>
    <li>Nest.js</li>
    <li>Docker</li>
    <li>Tailwind</li>
  </ul>
</div>

<style>
  h2 {
    font-size: 3rem;
  }
  .skills {
    width: 70%;
  }
  .skills-list {
    list-style-type: none;
    padding: 0;
    display: grid;
    grid-template-columns: auto auto auto auto;
    gap: 0.5rem;
  }
</style>
